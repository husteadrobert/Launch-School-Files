<h1>Select your Symbol</h1>

<ul>
  <% @move_list.each do |move| %>
  <li>
    <form class="inline" method="post" action="/human_move/<%= move %>">
      <button type="submit"><img src="<%= move %>.jpg"><%= move %></button>
    </form> 
  </li>
  <% end %>
</ul>


<% unless @log.human_history.empty? %>
  <% @log.each do |human_move, computer_move| %>
    <ul>
      <li><%= display_history(human_move, computer_move) %></li>
    </ul>
  <% end %>
<% end %>
